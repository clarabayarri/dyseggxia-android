<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dyseggxia.activities"
    android:versionCode="1"
    android:versionName="1.0" >
	
    <uses-sdk android:minSdkVersion="8" 
        android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	
    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" 
        android:theme="@style/DiseggxiaStyle" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" 
            android:configChanges="locale"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayActivity" android:screenOrientation="landscape" />
        <activity android:name=".CubesActivity" android:screenOrientation="landscape" />
        <activity android:name=".UsersActivity" android:screenOrientation="landscape" />
        <activity android:name=".CreateUserActivity" android:screenOrientation="landscape" />
    </application>

</manifest>