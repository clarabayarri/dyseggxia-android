<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cubosbackground" >

    

    <LinearLayout
        android:id="@+id/cubeAnswerVerticalLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/cubesanswersverticalbox"
        android:gravity="center|center_horizontal"
        android:orientation="vertical" >

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/cubeWordVerticalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dip"
        android:layout_toLeftOf="@id/cubeAnswerVerticalLayout" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/movingVerticalLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" >

    </LinearLayout>
    
    <TextView
            android:id="@+id/problemNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dip"
            android:text=""
            android:textAppearance="@style/DyseggxiaSubtitleAppearance" />

</RelativeLayout>