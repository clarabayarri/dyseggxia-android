<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center" >
    
	<ImageView 
	    android:id="@+id/wordcube_background"
	    android:src="@drawable/cubeslettercube"
	    android:scaleType="centerInside"
	    android:layout_centerInParent="true"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:contentDescription="@string/word_cube_background"/>
	<TextView 
	    android:id="@+id/cube_contents"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingTop="20dp"
	    android:paddingRight="20dp"
	    android:textAppearance="@style/DyseggxiaProblemLetterAppearance"
	    android:gravity="center" />
    
</RelativeLayout>