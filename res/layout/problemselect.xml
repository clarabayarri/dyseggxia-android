<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/problemSelectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="18dp"
        android:maxLines="1"
        android:text="@string/level_select"
        android:textAppearance="@style/DyseggxiaTitleAppearance" />
    
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res/dyseggxia.activities"
        android:id="@+id/problemSelectProblemsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/problemSelectTitle"
        android:layout_margin="10dp"
        android:gravity="center" >
        
        <dyseggxia.views.ProblemView
            android:id="@+id/ProblemView1"
            style="@style/DyseggxiaLevelButton"
            android:onClick="onClick"/>
        
        <dyseggxia.views.ProblemView
            android:id="@+id/ProblemView2"
            style="@style/DyseggxiaLevelButton"
            android:onClick="onClick"/>
        
        <dyseggxia.views.ProblemView
            android:id="@+id/ProblemView3"
            style="@style/DyseggxiaLevelButton"
            android:onClick="onClick"/>
        
    </LinearLayout>
    
    <Button
        android:id="@+id/problemSelectBackButton"
        style="@style/DyseggxiaBackButton"
        android:layout_alignLeft="@+id/problemSelectProblemsLayout"
        android:layout_alignTop="@+id/problemSelectTitle"
        android:onClick="onClick"/>

</RelativeLayout>