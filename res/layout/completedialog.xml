<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/howtobackground"
    android:layout_margin="40dp"
    android:padding="20dp" >
    
	<TextView 
	    android:id="@+id/completedialogSolutionLabel"
	    android:textAppearance="@style/DyseggxiaTitleAppearance" 
	    android:layout_centerHorizontal="true"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:text="@string/solution" />
	
	<Button 
	    android:id="@+id/completedialogBackButton"
	    style="@style/DyseggxiaBackButton"
	    android:layout_alignParentBottom="true"/>
	
	<Button 
	    android:id="@+id/completedialogContinueButton"
	    style="@style/DyseggxiaContinueButton"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentBottom="true"/>
</RelativeLayout>