	    <item name="android:layout_alignLeft">@id/usersBackground</item>
	</style>
	<style name="UsersDoneButton" parent="@style/UsersButton">
	    <item name="android:text">@string/users_done</item>
	    <item name="android:layout_alignRight">@id/usersBackground</item>
	</style>
	
