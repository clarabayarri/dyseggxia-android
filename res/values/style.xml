	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@drawable/users_background</item>
	    <item name="android:layout_marginTop">@dimen/UsersBackgroundMarginTopBottom</item>
	    <item name="android:layout_marginLeft">@dimen/UsersBackgroundMarginLeftRight</item>
	    <item name="android:layout_marginRight">@dimen/UsersBackgroundMarginLeftRight</item>
	    <item name="android:layout_marginBottom">@dimen/UsersBackgroundMarginTopBottom</item>
	</style>
	<style name="UsersCreate" parent="@style/DyseggxiaButton">
	    <item name="android:layout_width">@dimen/UsersCreateButtonWidth</item>
        <item name="android:layout_height">@dimen/UsersCreateButtonHeight</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignBottom">@id/usersBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/user_add_button</item>
