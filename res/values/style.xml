	    <item name="android:layout_marginRight">40dp</item>
	    <item name="android:layout_marginTop">10dp</item>
	</style>
	
	<!-- Menus -->
	<style name="MenuYellowBackground" parent="DyseggxiaImageView">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@drawable/menu_yellow_background</item>
	    <item name="android:layout_marginTop">@dimen/MenuYellowBackgroundMarginTopBottom</item>
	    <item name="android:layout_marginLeft">@dimen/MenuYellowBackgroundMarginLeftRight</item>
	    <item name="android:layout_marginRight">@dimen/MenuYellowBackgroundMarginLeftRight</item>
	    <item name="android:layout_marginBottom">@dimen/MenuYellowBackgroundMarginTopBottom</item>
	</style>
	<style name="GreenButton" parent="@style/DyseggxiaButton">
	    <item name="android:layout_width">@dimen/GreenButtonWidth</item>
        <item name="android:layout_height">@dimen/GreenButtonHeight</item>
        <item name="android:background">@drawable/green_button_background</item>
	</style>
	<style name="RedSmallButton" parent="@style/DyseggxiaButton">
	    <item name="android:layout_width">@dimen/RedSmallButtonWidth</item>
        <item name="android:layout_height">@dimen/RedSmallButtonHeight</item>
        <item name="android:background">@drawable/red_button_small_background</item>
	</style>
	
	<!-- Users -->
	<style name="SimpleBackground" parent="DyseggxiaImageView">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:background">@drawable/simplebackground</item>
	</style>
	<style name="UsersBackground" parent="DyseggxiaImageView">
